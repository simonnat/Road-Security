<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/schermata_generica"
    tools:context="com.Simone.Giuseppe.Help_Smart.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                />

            <TextView
                android:layout_width="335dp"
                android:layout_height="37dp"

                android:text="Benvenuto/a nell'app Help Smart
Chiudi tutte le app e goditi il viaggio in sicurezza!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        />
<Button
    android:id="@+id/test"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Test connessione dispositivo"/>
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/launch"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="avvia"/>
    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        />

            <TextView
                android:layout_width="335dp"
                android:layout_height="52dp"
                android:text="Inserisci numero da contattare in caso di emergenza
A tale numero verrÃ  anche inviato un messaggio con
la tua posizione" />

    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        />

    <EditText
        android:id="@+id/num"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:inputType="phone"
        android:hint="Primo numero"/>
    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        />
    <EditText
        android:id="@+id/num2"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:inputType="phone"
        android:hint="Secondo numero(opzionale)"/>
    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        />

    <Button
        android:id="@+id/confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="accetta numeri" />
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Vai alla mappa"
        android:onClick="onClickTts"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:entries="@array/giorni" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/showNumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mostra numeri" />
            <TextView
                android:id="@+id/speed"
                android:layout_width="335dp"
                android:layout_height="52dp"
                android:text="" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
